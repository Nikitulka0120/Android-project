<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/material_dynamic_neutral_variant10"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MediaPlayer">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Мой плейлист"
      android:textSize="18sp"
      android:textStyle="bold"
      android:padding="16dp"
      android:textColor="@color/white" />
  <ListView
      android:id="@+id/tracksListView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:divider="@android:color/transparent"
      android:dividerHeight="4dp"
      android:padding="8dp" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:padding="16dp"
      android:background="#252528">


    <ImageButton
        android:id="@+id/btnPlayPause"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/ic_launcher_background"
        android:src="@drawable/play_pause_icon_137298" />

    <SeekBar
        android:id="@+id/volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="16dp"
      android:background="#1E1E21">

    <TextView
        android:id="@+id/CurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/TotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@color/white"
        android:textSize="12sp" />

  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="16dp"
      android:background="@color/material_dynamic_neutral20">

    <ImageView
        android:id="@+id/currentTrackArt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/ic_launcher_background"
        android:scaleType="centerCrop"
        android:src="@drawable/music_icon" />

    <TextView
        android:id="@+id/currentTrackTitle"
        android:layout_width="315dp"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:text="Название трека"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
  </LinearLayout>


</LinearLayout>